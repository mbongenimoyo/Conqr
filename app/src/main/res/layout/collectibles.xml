<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="com.example.conqr.conqr.MainActivity">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="16dp"
            app:srcCompat="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/StickersButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="stickers"
            android:text="Stickers"
            android:layout_marginBottom="75dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp" />

        <Button
            android:id="@+id/BadgesButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="badges"
            android:text="Badges"
            android:layout_alignBaseline="@+id/StickersButton"
            android:layout_alignBottom="@+id/StickersButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F_NAME,L_NAME"
            android:layout_marginBottom="47dp"
            android:layout_above="@+id/BadgesButton"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />
    </RelativeLayout>
</ScrollView>